{
  "family": "%LABEL%",
  "taskRoleArn": "arn:aws:iam::712852996757:role/telegraf-role",
  "containerDefinitions": [
    {
      "image": "712852996757.dkr.ecr.eu-west-1.amazonaws.com/telegraf-deployment:latest",
      "name": "%LABEL%-container",
      "memoryReservation": 256,
      "cpu": 0,
      "portMappings": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "eu-west-1",
          "awslogs-stream-prefix": "%LABEL%",
          "awslogs-group": "/ecs/telegraf-deployment"
        }
      },
      "environment": [
        {
          "name": "API_KEY",
          "value": "%API_KEY%"
        },
        {
          "name": "INFLUXDB_URL",
          "value": "http://influx.kontakt.io"
        },
		    {
          "name": "INFLUXDB_PORT",
          "value": "8086"
		    },
        {
          "name": "INFLUXDB_USERNAME",
          "value": "%INFLUXDB_USERNAME%"
        },
        {
          "name": "INFLUXDB_PASSWORD",
          "value": "%INFLUXDB_PASSWORD%"
        },
        {
          "name": "KAPACITOR_URL",
          "value": "http://influx.kontakt.io:9090"
        },		
        {
          "name": "KAPACITOR_USER",
          "value": "%KAPACITOR_USER%"
        },
        {
          "name": "KAPACITOR_PASS",
          "value": "%KAPACITOR_PASS%"
        },
        {
          "name": "API_URL",
          "value": "https://api.kontakt.io"
        },
        {
          "name": "MQTT_URL",
          "value": "ssl://ovs.kontakt.io:8083"
        },
        {
          "name": "VENUE_ID",
          "value": "%VENUE_ID%"
        }
      ]
    }
  ]
}
